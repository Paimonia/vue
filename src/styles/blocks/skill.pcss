.skill {
  position: relative;
  width: 162px;
  height: 162px;
}

.skill__circle {
  fill: transparent;
  &_under {
    stroke: rgba(70, 78, 98, 0.2);
    stroke-width: 5px;
  }
  &_above {
    stroke-width: 10px;
    stroke-dasharray: 251;
    stroke-dashoffset: 100;
  }
}

.skill__circle-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-weight: bold;
  font-size: 18px;
  color: rgba($text-color, .5);
  padding: 14px;
}