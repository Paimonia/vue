.userinfo {
  text-align: center;
  @include desktop {
    display: flex;
    text-align: left;
  }
}

.userinfo__title {
  font-size: 18px;
  color: rgba($text-color, .4);
  font-weight: 600;
  margin-bottom: 25px;
  line-height: 1.6;
  @include desktop {
    text-align: right;
    margin-bottom: 0;
    padding-top: 8px;
    margin-right: 5%;
  }
}

.userinfo__occ {
  white-space: nowrap;
  display: block;
}

.userinfo__name {
  font-weight: 800;
  font-size: 72px;
  line-height: 0.8;
}